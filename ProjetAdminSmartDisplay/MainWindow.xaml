<Window x:Class="ProjetAdminSmartDisplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProjetAdminSmartDisplay" Height="450" Width="800">
    <Grid>
        <!-- Colonne gauche pour les boutons -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Partie gauche pour la navigation -->
        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Bouton "Ecran" avec bordure -->
            <Border BorderBrush="Black" BorderThickness="2" Margin="10">
                <Button Content="Ecran" Width="150" Height="50" Background="White" FontSize="16" Click="EcranButton_Click"/>
            </Border>
            <!-- Autres boutons -->
            <Border BorderBrush="Black" BorderThickness="2" Margin="10">
                <Button Content="Envoyer un Document" Width="150" Height="50" Background="White" FontSize="16" Click="EnvoyerDocumentButton_Click"/>
            </Border>
            <Border BorderBrush="Black" BorderThickness="2" Margin="10">
                <Button Content="Home" Width="150" Height="50" Background="White" FontSize="16"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>
