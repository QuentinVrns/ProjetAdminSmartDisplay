<UserControl x:Class="ProjetAdminSmartDisplay.View.Alerte"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#2C2F33">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock Text="Alerte" FontSize="24" FontWeight="Bold" Foreground="#5E81AC" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Button Content="INCENDIE" Width="200" Height="50" Click="BtnIncendie_Click" Margin="10" Background="#E74C3C" Foreground="White"/>
            <Button Content="INTRUSION" Width="200" Height="50" Click="BtnIntrusion_Click" Margin="10" Background="#3498DB" Foreground="White"/>
            <Button Content="EVACUATION AUTRE DANGER" Width="200" Height="50" Click="BtnEvacuation_Click" Margin="10" Background="#F39C12" Foreground="White"/>

            <Button Content="Désactiver l'Alerte" Width="200" Height="50" Click="BtnDisableAlert_Click" Margin="20,40,20,0" Background="#2C3E50" Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>
