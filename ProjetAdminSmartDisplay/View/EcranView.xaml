<UserControl x:Class="ProjetAdminSmartDisplay.EcranView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ProjetAdminSmartDisplay"
             Height="450" Width="800"
             Background="Black">
    <!-- Définir le fond de la fenêtre sur noir -->

    <UserControl.Resources>
        

        <!-- ControlTemplate pour ComboBoxToggleButton -->
        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Border x:Name="Border"
                    CornerRadius="5"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                <Grid>
                    <Path x:Name="Arrow"
                          Fill="White"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Data="M 0 0 L 4 4 L 8 0 Z"/>
                </Grid>
            </Border>
        </ControlTemplate>

        <!-- ControlTemplate pour ComboBoxTextBox -->
        <ControlTemplate x:Key="ComboBoxTextBox" TargetType="TextBox">
            <Border x:Name="PART_ContentHost"
                    Background="Transparent"
                    Focusable="False"/>
        </ControlTemplate>

        <!-- Style pour les TextBlocks -->
        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <!-- Effet d'ombre portée pour le texte -->
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="2" Opacity="0.7" BlurRadius="3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour les ComboBox -->
        <Style x:Key="CustomComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Width" Value="220"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background">
                <Setter.Value>
                    <!-- Dégradé pour le fond du ComboBox -->
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FF444444" Offset="0"/>
                        <GradientStop Color="#FF222222" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Orange"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <!-- Ombre portée plus prononcée -->
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" Opacity="0.7" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
            <!-- Coins arrondis -->
            <Setter Property="Template">
                <Setter.Value>
                    <!-- ControlTemplate original restauré -->
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <Grid>
                                    <ToggleButton Name="ToggleButton"
                                                  Template="{StaticResource ComboBoxToggleButton}"
                                                  Grid.Column="2"
                                                  Focusable="false"
                                                  IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                                  ClickMode="Press"
                                                  Background="Transparent"
                                                  BorderBrush="{x:Null}"
                                                  BorderThickness="0"
                                                  HorizontalAlignment="Right"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,4,0"/>
                                    <ContentPresenter Name="ContentSite"
                                                      IsHitTestVisible="False"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                      Margin="6,3,25,3"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"/>
                                </Grid>
                            </Border>
                            <!-- Rectangle transparent pour capter les clics -->
                            <Rectangle Fill="Transparent"
                                       IsHitTestVisible="True"
                                       MouseDown="ComboBox_MouseDown"/>
                            <!-- Popup de la liste déroulante -->
                            <Popup Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border Name="DropDownBorder"
                                            Background="#FF333333"
                                            BorderBrush="Orange"
                                            BorderThickness="1"
                                            CornerRadius="5">
                                        <Border.Effect>
                                            <!-- Ombre portée sur la liste déroulante -->
                                            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="4" Opacity="0.7" BlurRadius="5"/>
                                        </Border.Effect>
                                    </Border>
                                    <ScrollViewer Margin="4,6,4,6"
                                                  SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True"
                                                    KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <!-- Triggers -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="false">
                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="#888"/>
                            </Trigger>
                            <Trigger Property="IsGrouping" Value="true">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
                            </Trigger>
                            <Trigger SourceName="Popup" Property="AllowsTransparency" Value="True">
                                <Setter TargetName="DropDownBorder" Property="CornerRadius" Value="4"/>
                                <Setter TargetName="DropDownBorder" Property="BorderThickness" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour le bouton émoji -->
        <Style x:Key="EmojiButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="10"/>
            <!-- Effet d'ombre portée pour le bouton -->
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="2" Opacity="0.7" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
            <!-- Effet au survol -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour le bouton de suppression -->
        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Background" Value="Orange"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Background pour les deux côtés -->
        <LinearGradientBrush x:Key="SideBackground" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FF000000" Offset="0"/>
            <GradientStop Color="#FF1A1A1A" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Resources>

    <Grid>
        <!-- Définition des colonnes -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <!-- Largeur fixe pour le panneau de gauche -->
            <ColumnDefinition Width="*"/>
            <!-- Largeur flexible pour les images -->
        </Grid.ColumnDefinitions>

        <!-- Côté gauche avec arrière-plan et plus de relief -->
        <Border Grid.Column="0" Background="{StaticResource SideBackground}">
            <Border.Effect>
                <!-- Lueur externe pour ajouter du relief -->
                <DropShadowEffect Color="Black" Direction="0" ShadowDepth="5" Opacity="0.8" BlurRadius="10"/>
            </Border.Effect>
            <!-- Grid pour positionner les éléments -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20" Grid.Row="0">
                    <!-- Bâtiment -->
                    <TextBlock Text="Bâtiment" Style="{StaticResource LabelTextStyle}"/>
                    <ComboBox x:Name="BatimentComboBox"
                              Style="{StaticResource CustomComboBoxStyle}"
                              DisplayMemberPath="NomBatiment"
                              SelectedValuePath="Id"
                              SelectionChanged="OnBatimentSelectionChanged"/>

                    <!-- Étage -->
                    <TextBlock Text="Étage" Style="{StaticResource LabelTextStyle}"/>
                    <ComboBox x:Name="EtageComboBox"
                              Style="{StaticResource CustomComboBoxStyle}"
                              DisplayMemberPath="NomEtage"
                              SelectedValuePath="Id"
                              SelectionChanged="OnEtageSelectionChanged"/>

                    <!-- Classe -->
                    <TextBlock Text="Classe" Style="{StaticResource LabelTextStyle}"/>
                    <ComboBox x:Name="ClasseComboBox"
                              Style="{StaticResource CustomComboBoxStyle}"
                              DisplayMemberPath="NomSalle"
                              SelectedValuePath="Id"
                              SelectionChanged="OnClasseSelectionChanged"/>

                    <!-- Affichage des informations de la classe -->
                    <TextBlock x:Name="InfoClasseTextBlock"
                               FontSize="16"
                               Foreground="White"
                               Margin="0,20,0,0"/>
                </StackPanel>

                <!-- Espace flexible -->
                <Grid Grid.Row="1"/>

                <!-- Bouton avec émoji pour revenir à la MainWindow -->
                <Button Content="🏠"
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Margin="20"
                        Grid.Row="2"
                        Click="RetourAccueil_Click"
                        Style="{StaticResource EmojiButtonStyle}"/>
            </Grid>
        </Border>

        <!-- Séparateur avec effet de relief amélioré -->
        <Grid Grid.Column="0" HorizontalAlignment="Right" Width="15">
            <!-- Bordure avec dégradé pour l'effet 3D -->
            <Border Width="15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="Transparent" Offset="0"/>
                        <GradientStop Color="#FF555555" Offset="0.3"/>
                        <GradientStop Color="#FF222222" Offset="0.5"/>
                        <GradientStop Color="#FF555555" Offset="0.7"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <!-- Bordure pour l'ombre portée -->
            <Border Width="15">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="5" Opacity="0.6" BlurRadius="10"/>
                </Border.Effect>
            </Border>
        </Grid>

        <!-- Partie droite pour l'affichage des images -->
        <Border Grid.Column="1" Background="{StaticResource SideBackground}">
            <Border.Effect>
                <!-- Lueur externe pour ajouter du relief -->
                <DropShadowEffect Color="Black" Direction="0" ShadowDepth="5" Opacity="0.8" BlurRadius="10"/>
            </Border.Effect>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListView x:Name="ImagesControl" Margin="10"
          ItemsSource="{Binding}"
          VirtualizingStackPanel.IsVirtualizing="True"
          VirtualizingStackPanel.VirtualizationMode="Standard"
          Background="Black">
                    <!-- Ajout de la propriété Background -->
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Border Margin="10" CornerRadius="10">
                                    <Border.Background>
                                        <!-- Dégradé pour simuler l'éclairage et le relief -->
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#FF444444" Offset="0"/>
                                            <GradientStop Color="#FF222222" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <!-- Transformation initiale pour le relief -->
                                            <Setter Property="RenderTransform">
                                                <Setter.Value>
                                                    <SkewTransform AngleX="-5" AngleY="0"/>
                                                </Setter.Value>
                                            </Setter>
                                            <!-- Effet initial -->
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.7" BlurRadius="10"/>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <!-- Transformation au survol -->
                                                    <Setter Property="RenderTransform">
                                                        <Setter.Value>
                                                            <SkewTransform AngleX="0" AngleY="0"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <!-- Effet au survol -->
                                                    <Setter Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="10" Opacity="0.9" BlurRadius="15"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <!-- Liaison correcte à ImageSource -->
                                    <Image Source="{Binding ImageSource}" Width="150" Height="150" Stretch="UniformToFill" x:Name="AnimatedImage"/>
                                </Border>
                                <!-- Bouton de suppression (croix orange) -->
                                <Button Content="✖"
                        Style="{StaticResource DeleteButtonStyle}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,5,5,0"
                        Click="DeleteImage_Click"/>
                                <!-- Image de remplacement en cas d'erreur -->
                                <Image Source="pack://application:,,,/Images/default.png" Width="150" Height="150" Stretch="UniformToFill"
                       />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
